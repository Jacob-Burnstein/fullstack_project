generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Students {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  email          String   @unique
  imageUrl       String
  gpa            Decimal
  // @range is throwing error. Will come back
  //  gpa            Decimal  @range([0.0, 4.0])
}